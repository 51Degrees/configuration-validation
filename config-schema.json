{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://51degrees.com/pipeline-configuration-schema.json",
  "title": "51Degrees Pipeline API configuration",
  "description": "51Degrees Pipeline API configuration",
  "type": "object",
  "properties": {
    "PipelineOptions": {
      "type": "object",
      "description": "Container for all Pipeline API configuration options",
      "properties": {
        "Elements": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "",
            "properties": {
              "BuilderName": {
                "type": "string",
                "description": "The name of the builder to use when building this element"
              },
              "BuildParameters": {
                "type": "object",
                "description": "Configuration options for this element"
              }
            },
            "required": [ "BuilderName" ],
            "minProperties": 1,
            "maxProperties": 2,
            "additionalProperties": false
          },
          "minItems": 1
        },
        "BuildParameters": {
          "type": "object",
          "description": "Configuration options for this pipeline"
        }
      },
      "required": [ "Elements" ],
      "additionalProperties": false,
      "minProperties": 1,
      "maxProperties": 2
    }
  },
  "additionalProperties": false,
  "maxProperties": 1
}